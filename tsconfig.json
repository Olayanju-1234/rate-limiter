{
  "compilerOptions": {
    "outDir": "./dist", // Output compiled files to the `dist` folder
    "rootDir": "./src", // Specify the source folder
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}